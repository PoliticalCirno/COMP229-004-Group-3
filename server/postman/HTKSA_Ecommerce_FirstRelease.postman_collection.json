{
  "info": {
    "name": "HTKSA_Ecommerce_FirstRelease",
    "_postman_id": "9f7d3e2b-0000-4a0b-aaaa-htksa-ecomm",
    "description": "Auth, Products, Cart, Orders, Reviews",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base}}/api/auth/register",
              "host": [
                "{{base}}"
              ],
              "path": [
                "api",
                "auth",
                "register"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"name\": \"Test User\", \"email\": \"user@example.com\", \"password\": \"P@ssw0rd!\"}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base}}/api/auth/login",
              "host": [
                "{{base}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"email\": \"user@example.com\", \"password\": \"P@ssw0rd!\"}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.collectionVariables.set('token', pm.response.json().token);"
                ]
              }
            }
          ]
        },
        {
          "name": "Profile (me)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base}}/api/users/me",
              "host": [
                "{{base}}"
              ],
              "path": [
                "api",
                "users",
                "me"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Admin Create Product",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base}}/api/products",
              "host": [
                "{{base}}"
              ],
              "path": [
                "api",
                "products"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"name\": \"Pro Football\", \"description\": \"Match-quality football\", \"price\": 59.99, \"image\": \"https://example.com/football.jpg\", \"category\": \"football\", \"stock\": 100}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.collectionVariables.set('product_id', pm.response.json()._id);"
                ]
              }
            }
          ]
        },
        {
          "name": "List Products",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base}}/api/products",
              "host": [
                "{{base}}"
              ],
              "path": [
                "api",
                "products"
              ]
            }
          }
        },
        {
          "name": "Search by q",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base}}/api/products?q=football",
              "host": [
                "{{base}}"
              ],
              "path": [
                "api",
                "products"
              ],
              "query": [
                {
                  "key": "q",
                  "value": "football"
                }
              ]
            }
          }
        },
        {
          "name": "Get Product",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base}}/api/products/{{product_id}}",
              "host": [
                "{{base}}"
              ],
              "path": [
                "api",
                "products",
                "{{product_id}}"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Cart & Checkout",
      "item": [
        {
          "name": "Get Cart",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base}}/api/cart",
              "host": [
                "{{base}}"
              ],
              "path": [
                "api",
                "cart"
              ]
            }
          }
        },
        {
          "name": "Add To Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base}}/api/cart/add",
              "host": [
                "{{base}}"
              ],
              "path": [
                "api",
                "cart",
                "add"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"productId\": \"{{product_id}}\", \"quantity\": 2}"
            }
          }
        },
        {
          "name": "Update Qty",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base}}/api/cart/update",
              "host": [
                "{{base}}"
              ],
              "path": [
                "api",
                "cart",
                "update"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"productId\": \"{{product_id}}\", \"quantity\": 3}"
            }
          }
        },
        {
          "name": "Checkout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base}}/api/orders/checkout",
              "host": [
                "{{base}}"
              ],
              "path": [
                "api",
                "orders",
                "checkout"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "My Orders",
          "request": {
            "method": "GET",
