              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base}}/api/orders/my",
              "host": [
                "{{base}}"
              ],
              "path": [
                "api",
                "orders",
                "my"
              ]
            }
          }
        },
        {
