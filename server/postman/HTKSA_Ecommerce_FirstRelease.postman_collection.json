          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base}}/api/orders/my/{{order_id}}/cancel",
              "host": [
                "{{base}}"
              ],
              "path": [
                "api",
                "orders",
                "my",
                "{{order_id}}",
                "cancel"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Reviews",
      "item": [
        {
          "name": "Create Review",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base}}/api/reviews",
              "host": [
                "{{base}}"
              ],
              "path": [
                "api",
                "reviews"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"productId\": \"{{product_id}}\", \"rating\": 5, \"comment\": \"Great!\"}"
            }
          }
        },
        {
          "name": "List Product Reviews",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base}}/api/reviews/product/{{product_id}}",
              "host": [
                "{{base}}"
              ],
              "path": [
                "api",
                "reviews",
                "product",
                "{{product_id}}"
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base",
      "value": "http://localhost:3000"
    }
  ]
}